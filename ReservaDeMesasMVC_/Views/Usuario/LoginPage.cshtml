@{
}

<link rel="stylesheet" href="~/css/login-page.css" />



      <div class="container mt-5 pt-5">
        <div class="row">
          <div class="col-12 col-sm-7 col-md-6 m-auto">
            <div class="card border-0 shadow">
              <div class="card-body">
                <svg class="mx-auto my-3" xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                  <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                  <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                </svg>
                <form asp-controller="Usuario" asp-action="LoginPage" method="post" >
                <div class="form-floating mb-3">
                  <input type="text" name="login" class="form-control" id="login" placeholder="Digite o usuário" required>
                  <label for="login">Digite o usuário</label>
                  <div class="invalid-feedback">
                    Por favor, informe um login.
                  </div>
                </div>
                <div class="form-floating mb-3">
                  <input type="password" name="password" class="form-control" id="password" placeholder="Digite a Senha" required>
                  <label for="password">Digite o Senha</label>
                  <div class="invalid-feedback">
                    Por favor, informe uma senha.
                  </div>
                </div>

                <div class="form-check mb-3">
                  <input class="form-check-input" type="checkbox" value="" id="rememberPasswordCheck" name="manterlogado" >
                  <label class="form-check-label" for="rememberPasswordCheck">
                    Manter logado
                  </label>
                </div>

                <div class="d-grid">
                  <button class="btn btn-lg btn-primary btn-login text-uppercase fw-bold mb-2" type="submit">Logar</button>                  
                </div>
              </form>
                  @if(ViewBag.Erro != null)
                  {
                      <label class="form-check-label">
                       @ViewBag.Erro
                      </label>
                  }
              </div>
            </div>
          </div>
        </div>
      </div>